<select class="institutionSelect input-lg select" onchange={{action (mut institutionId) value="target.value"}}>
    <option>Select an Institution</option>
    {{#each institutions as |inst|}}
    <option selected={{eq inst institutionChoice}} value={{inst}}>{{inst}}</option>
    {{/each}}
</select>
<input class='input input-lg' value={{grant_number}} onchange={{action (mut grant_number) value='target.value'}} placeholder='Grant Number'>
<button type='button' class='btn btn-primary btn-lg button-pos' {{action 'createGrantHook' departmentId grant_number grant_pi}}>Add a grant</button>



        {{#if institution}}
            <select class="departmentSelect input-lg select" onchange={{action (mut departmentId) value="target.value"}}>
                <option>Select a Department</option>
                {{#each departments as |departmentChoice|}}
                <option selected={{eq department departmentChoice}} value={{departmentChoice.id}}>{{departmentChoice.name}}</option>
                {{/each}}
            </select>
            <input class='input input-lg' value={{grant_number}} onchange={{action (mut grant_number) value='target.value'}} placeholder='Grant Number'>
            <input class='input input-lg' value={{grant_pi}} onchange={{action (mut grant_pi) value='target.value'}} placeholder='Principal Investigator'>
            <button type='button' class='btn btn-primary'  {{action 'createGrantHook' departmentId grant_number grant_pi}}>Add a grant</button>
        {{/if}}
